#hero
    background url("../../images/hero_back.png") no-repeat
    background-size 100%
    height 100vh
    display flex
    align-items center
    padding 0 4rem

    .rocket
        width 65%
        position absolute
        right 0
        padding: 0 3rem
        margin-top 2.5rem

    .hero_content
        color $white
        margin-top -3rem

        .title
            font-size 4rem
            max-width: 35rem
            margin-bottom 1rem
        .subtitle
            font-size 1.5rem
            max-width: 25rem
