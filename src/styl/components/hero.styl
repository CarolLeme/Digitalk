#hero
    background url("../../images/hero_back.png") no-repeat
    background-size 100%
    // height 100vh
    height: 100%
    display flex
    align-items center
    padding 0 4rem
    position relative

    .rocket
        width 60%
        right 0
        margin 0% 5% 0 0
        max-width 1000px
        position absolute

    .hero_content
        color $white
        margin 15% 0 30% 0%
        max-width 50%

        .title
            font-size 4rem
            margin-bottom 1rem
            max-width 50rem
        .subtitle
            font-size 1.5rem
            max-width: 25rem
