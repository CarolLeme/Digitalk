#plataform

    .title
        text-align center
        &-card
            font-size 1.5rem
            width 200px
            text-align left

    .plataform_container
        display flex
        align-items center
        &-reverse
            flex-direction row-reverse

        .plataform_image
            width 30%

        .plataform_content
            width 50%
            margin auto
            display flex
            align-items center
            flex-direction column

            .subtitle
                color $tertiary
                font-size 1.8rem
                text-align center
                width 70%
                margin 3% 0

            p
                font-size 1rem
                text-align left
                color $gray

    .plataform_card
        width 550px
        display flex
        flex-direction column

        .plataform_card_header
            color $white
            height 100px
            display flex
            flex-direction row
            align-items center
            z-index: 9999;
            &-whatsapp
                background url("../../images/plataform_title1.png") no-repeat
                background-size 280px 100px
                margin 0 0 -70px 25px
            &-inteligence
                background url("../../images/plataform_title2.png") no-repeat
                background-size 67% 100%
                margin-bottom -15%
            &-dashboard
                background url("../../images/plataform_title3.png") no-repeat
                background-size 67% 100%
                margin-bottom -15%
            .plataform_icon
                width 50px
                margin 5%

        .plataform_card_content
            text-align center
            color $white
            &-whatsapp
                background url("../../images/plataform_content1.png") no-repeat
                background-size contain
                padding 15% 26% 7% 7%
            &-inteligence
                background url("../../images/plataform_content2.png") no-repeat
                background-size contain
                padding 15% 26% 7% 7%
            &-dashboard
                background url("../../images/plataform_content3.png") no-repeat
                background-size contain
