#plataform

    .title
        text-align center
        &-card
            font-size 1.5rem
            width 200px
            text-align left

    .plataform_container
        display flex
        align-items center
        &-reverse
            flex-direction row-reverse

        .plataform_image
            width 30%

        .plataform_content
            width 50%
            margin auto
            display flex
            align-items center
            flex-direction column

            .subtitle
                color $tertiary
                font-size 1.8rem
                text-align center
                width 70%
                margin 3% 0

            p
                font-size 1rem
                text-align left
                color $gray

    .plataform_card
        width 100%
        display flex
        flex-direction column
        padding 0 10%
        >div
            max-width 550px
            &:nth-child(2)
                align-self flex-end

        .plataform_card_header
            color $white
            height 100px
            display flex
            flex-direction row
            align-items center
            z-index: 9999;
            opacity 0.99
            &-whatsapp
                background url("../../images/plataform_title1.png") no-repeat
                background-size 280px 100px
                margin-bottom -70px
            &-inteligence
                background url("../../images/plataform_title2.png") no-repeat
                background-size 280px 100px
                margin-bottom -70px
            &-dashboard
                background url("../../images/plataform_title3.png") no-repeat
                background-size 280px 100px
                margin-bottom -80px
            .plataform_icon
                width 50px
                margin 5%

        .plataform_card_content
            text-align center
            color $white
            width 400px
            &-whatsapp
                background url("../../images/plataform_content1.png") no-repeat
                background-size 100% 100%
                padding 90px 30px 50px 30px
            &-inteligence
                background url("../../images/plataform_content2.png") no-repeat
                background-size 100% 100%
                padding 90px 30px 40px 30px
            &-dashboard
                background url("../../images/plataform_content3.png") no-repeat
                background-size 100% 100%
                padding 90px 30px 50px 30px
