#service
    background url("../../images/service_back.png") no-repeat
    background-position right
    background-size 60% 100%

    .service_list
        display flex
        margin 2%
        align-items baseline
        justify-content space-around

        .service_item
            margin 5%
            width 250px
            display flex
            flex-direction column
            align-items center

            .service_icon
                width 90%

    .title
        margin -5% 0 0 19%

    .subtitle
        color $tertiary
        margin 5% 0
        text-align center
        font-weight bold

    p
        font-size 0.9rem
        text-align center
        color $gray
